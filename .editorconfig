# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
max_line_length = 120

[*.{java, tf, yml, xml, json, js}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.tf]
indent_size = 2

[*.xml]
# XML should declare its own encoding on a per-file basis
charset = unset

[*.md]
# Markdown requires 2+ spaces at the ends of some lines, such as headers and lists
trim_trailing_whitespace = false
